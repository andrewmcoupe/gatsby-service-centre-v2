{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2017",
    "outDir": "lib",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "./node_modules/*", ".cache"]
}
